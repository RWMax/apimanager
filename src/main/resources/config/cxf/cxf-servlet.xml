<?xml version="1.0" encoding="UTF-8"?> 
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws" 
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd 
	http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	
	<bean id="mockService" class="com.yinhai.api.ws.impl.MockService">
		<property name="apiService" ref="apiServiceImpl"></property>
	</bean>
	
	<jaxws:server serviceClass="com.yinhai.api.ws.IMockService" address="/mockWS">
		<jaxws:serviceBean>
			<ref bean="mockService"/>
		</jaxws:serviceBean>
	</jaxws:server>
	
</beans>