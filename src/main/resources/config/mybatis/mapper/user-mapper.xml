<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="api_user">
  <resultMap id="BaseResultMap" type="com.yinhai.api.common.domain.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="createtime" property="createtime" jdbcType="TIMESTAMP" />
    <result column="password" property="password" jdbcType="CHAR" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="nickname" property="nickname" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="CHAR" />
  </resultMap>
    <resultMap id="UserInfoMap" type="com.yinhai.api.common.domain.User" >
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="createtime" property="createtime" jdbcType="TIMESTAMP" />
    <result column="nickname" property="nickname" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, email, createtime, password, type, nickname, status
  </sql>
   <sql id="UserInfo_List" >
    email, createtime,  nickname
  </sql>
    <!-- 查询用户 -->
	<select id="getUser"  parameterType="map"  resultMap="BaseResultMap">
		SELECT 
			<include refid="Base_Column_List" />
		FROM user
		WHERE 1 = 1
		<if test="email != null">
			AND email = #{email}
		</if>
		<if test="id != null">
			AND id = #{id}
		</if>
	</select>	
	<select id="getUserInfo" parameterType="java.lang.Integer" resultMap="UserInfoMap">
		SELECT
			<include refid="UserInfo_List" />
		FROM user
		WHERE id = #{id}
		AND status = 'ENABLE'
	</select>
	<!-- 查询token是否可用 -->
	<select id="checkTokenStatus" parameterType="map" resultType="java.lang.Integer">
		SELECT 
			count(id) as count
		from find_password
		where token = #{token}
		and status = 0
	</select>
	<!-- 通过token查询userid -->
	<select id="getUserid" parameterType="map" resultType="map">
		select 
			userid
		from find_password
		where token = #{token}
		and status = 0
	</select>
	<!-- 查询邮箱 -->
	<select id="getEmail" parameterType="map"  resultType="java.lang.Integer">
		SELECT 
			count(1)
		FROM user
		WHERE 1 = 1
		AND email = #{email}
	</select>
	<select id="checkToken" parameterType="map" resultType="map">
		select 
			token,
			status
		from find_password
		where userid = #{userid}
	</select>
	<!-- 更新token -->
	<update id="updateToken" parameterType="map">
		update find_password
		<set>
			<if test="token != null">
				token = #{token},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
		</set>
		where userid = #{userid}
	</update>
	<!-- 新增token -->
	<insert id="insertToken" parameterType="map">
		INSERT INTO find_password
		(
			userid,
			token,
			status
		)values(
			#{userid},
			#{token},
			#{status}
		)
	</insert>
	<!-- 新增用户 -->
	<insert id="insertUser" parameterType="map">
		INSERT INTO user
		(
			email,<!-- 邮箱 -->
			password,<!-- 密码 -->
			nickname,<!-- 别名 -->
			createtime<!-- 创建时间 -->
		)values(
			#{email},
			#{password},
			#{nickname},
			now()
		)
	</insert>
	<!-- update -->
	<update id="updateUser" parameterType="map">
		update user
		<set>
			<if test="nickname != null">
				nickname = #{nickname},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="password != null">
				password = #{password},
			</if>
		</set>
		where id = #{id}
	</update>
</mapper>
